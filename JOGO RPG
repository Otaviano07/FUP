#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <string.h>

void informacao(char Nome1[10], char Nome2[10], int Forca1, int Forca2, int Resistencia1, int Resistencia2, int Mobilidade1, int Mobilidade2){
        printf("Dados do Jogador 1 \t\tDados do Jogador 2\n\n");
        printf("Nome: %s\t\t\t||\tNome: %s\n", Nome1, Nome2);
        printf("Pontos de Forca: %d\t\t||\tPontos de Forca: %d\n", Forca1, Forca2);
        printf("Pontos de Resistencia: %d\t||\tPontos de Resistencia: %d\n", Resistencia1, Resistencia2);
        printf("Pontos de Mobilidade: %d\t||\tPontos de Mobilidade: %d\n", Mobilidade1, Mobilidade2);

}

int main(){

char Nome1[10], Nome2[10];
int Vinda1, Forca1, Resistencia1, Mobilidade1, Ataque1, Defesa1, Esquiva1;
int Vinda2, Forca2, Resistencia2, Mobilidade2, Ataque2, Defesa2, Esquiva2;
int i,j, vez=0;
    // Prenchimeto dos dados do primeiro jogador
    printf("\tPrenchimento dos Dados\n");
    printf("\t\tJogador 1\n");
    printf("Digite o Nome:\n");
    scanf("%s", Nome1);
    system("clear");

    do{
        printf("\tPrenchimento dos Dados\n");
        printf("\t\tJogador 1\n");
        printf("Nome: %s\n\n", Nome1);
        printf("Digite os Pontos de Forca:\n");
        printf("Permitido somente 20 pontos para distribuicao.\n");
            scanf("%d", &Forca1);            
            system("clear");
     }while(Forca1 > 20 || Forca1 < 0 || getchar()!='\n'); // O laco vai repetir enquanto a Forca1 for maior que 20 pontos ou quando o usuario digitar um caractere.
    do{
        printf("\tPrenchimento dos Dados\n");
        printf("\t\tJogador 1\n");
        printf("Nome: %s\n", Nome1);
        printf("Digite os Pontos de Forca: %d\n\n",Forca1);
        printf("Digite os Pontos de Resistência:\n");
        printf("Permitido somente %d pontos para distribuicao.\n", 20-Forca1);
            scanf("%d", &Resistencia1);
            system("clear");
    }while(Resistencia1 > (20 - Forca1) || Resistencia1 < 0 || getchar()!='\n');
do{ 
        printf("\tPrenchimento dos Dados\n");
        printf("\t\tJogador 1\n");
        printf("Nome: %s\n", Nome1);
        printf("Pontos de Forca: %d\n",Forca1);
        printf("Pontos de Resistência: %d\n\n", Resistencia1);
        printf("Digite os Pontos de Mobilidade: \n");
        printf("Permitido somente %d pontos para distribuicao.\n", 20-(Forca1 + Resistencia1));
            scanf("%d", &Mobilidade1);
            system("clear");
    }while(Mobilidade1 != (20-(Forca1 + Resistencia1)) || getchar()!='\n');
 


return 0;
}
